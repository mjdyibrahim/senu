{
    "name": "Senu App Development",
    "dockerComposeFile": ["../docker-compose.yml", "docker-compose.extend.yml"],
    "service": "app",
    "workspaceFolder": "/workspace/your_project_root",  // Replace 'your_project_root' with the actual project root directory
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "ms-vscode-remote.remote-containers",
                "ms-vscode-remote.remote-ssh",
                "ms-vscode-remote.remote-ssh-edit",
                "ms-vscode-remote.remote-wsl",
                "ms-vscode-remote.remote-wsl-edit"
            ]
        }
    },
    "forwardPorts": [8000],
    "postCreateCommand": "chmod +x /workspace/your_project_root/.devcontainer/setup.sh && bash /workspace/your_project_root/.devcontainer/setup.sh"  // Ensure the path is correct
}
